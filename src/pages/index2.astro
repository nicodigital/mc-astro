---
// export const prerender = false;
import Layout from "@/layout/Layout.astro";
import ProjectsTable from '../sections/ProjectsTable.astro'
import PreFooter from '../sections/PreFooter.astro'
---

<Layout
  title="Martin Corbo Design"
  claim="Form. Follows. Function."
  description="Explore my vibrant portfolio showcasing innovative designs, where creativity meets functionality. Elevate your brand with my unique visual solutions."
>

<section class='container row section'>
 
    <div class='col-[1/13] xg:col-[1/6]'>
      <h1 class="animate" data-anim="bottom" >Form. Follows. Function.</h1>
    </div>
 
    <div class='col-[1/13] xg:col-[6/11] mt-6 xg:mt-0'>
        <p class="animate" data-anim="bottom" >
          Mart√≠n Corbo is a graphic designer and art director known for his minimalistic and impactful designs. He focuses on creating timeless designs that cater to the specific needs and goals of each brand, helping them create enduring and memorable identities.
        </p>
    </div>
 
</section>

<!-- Projects -->
<section class="section"  >
  <div class="container mb-8 xg:mb-10">
    <h2 class="animate" data-anim="bottom" data-delay="200">
      Selected Projects
    </h2>
  </div>
  <div class="projects table w-full">
    <ProjectsTable/>
  </div>
</section>

<PreFooter/>

</Layout>

