---
import CaseRow from '../components/CaseRow.astro'
const getCases = await fetch(import.meta.env.API_CASES);
const cases = await getCases.json();
//console.log(cases)
---

<ul class="animate" data-anim="bottom" data-delay="400" >
  <!-- table head -->
  <li class="container row py-2" aria-describedby="Table header">
    <div class="col-[1/4] xg:col-[1/3]">Client</div>
    <div class="col-[4/7] xg:col-[3/6]">Agency</div>
    <div class="col-[7/11] xg:col-[6/12]">Type</div>
    <div class="col-[11/13] xg:col-[12/13] text-right">Year</div>
  </li>

  <!--/table head -->
  {
    cases.map( caso =>(
      <CaseRow {caso} />
    ) )
  }
  

</ul>
